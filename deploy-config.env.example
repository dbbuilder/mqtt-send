# Azure Configuration
AZURE_SUBSCRIPTION_ID="your-subscription-id-here"
AZURE_RESOURCE_GROUP="mqtt-bridge-prod"
AZURE_LOCATION="eastus"

# SQL Configuration (Azure SQL or external)
SQL_CONNECTION_STRING="Server=tcp:your-server.database.windows.net,1433;Database=MqttBridge;User ID=sqladmin;Password=YourPassword;Encrypt=True;TrustServerCertificate=False;"

# External MQTT Broker
MQTT_BROKER_HOST="mqtt.yourcompany.com"
MQTT_BROKER_PORT="1883"

# Container Registry Name (must be globally unique, lowercase alphanumeric only)
ACR_NAME="mqttbridgeacr"
